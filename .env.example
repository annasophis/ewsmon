# Database
DATABASE_URL=postgresql+psycopg://ews:ews@db:5432/ews

# Worker
POLL_INTERVAL_SECONDS=10
HTTP_TIMEOUT_SECONDS=20

# Teams webhook alerts (state change: UP->DOWN, DOWN->UP only)
# Leave empty to disable alerts.
TEAMS_WEBHOOK_URL=
# Cooldown in seconds per target to avoid spam when flapping (default: 300)
ALERT_COOLDOWN_SECONDS=300

# Environment label shown in alerts (e.g. prod, uat, dev)
ENVIRONMENT=dev

# Logging
LOG_LEVEL=INFO

# Optional: DB cleanup
PROBE_RETENTION_DAYS=14
CLEANUP_EVERY_SECONDS=3600

# Admin panel login (/admin); required for banner, notes, and incidents
ADMIN_USERNAME=admin
ADMIN_PASSWORD=
